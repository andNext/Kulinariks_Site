<!-- шапка сайта-->
<header class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<!-- ссылка на сайт -->
			<%= link_to "Кулинарикс", root_path, id: "logo"%>
			<!-- навигация -->
			<nav>
				<ul class="nav pull-right">
					<li><%= link_to "Главная", root_path%></li>

					<!-- меню в зависимости от авторизации пользователя -->
					<% if signed_in? %>
                  <li><%= link_to "Создать объявление", add_path %></li>
            			<li><%= link_to "Сообщество", users_path %></li>
            			<li id="fat-menu" class="dropdown" >
              				<a class="dropdown-toggle" data-toggle="dropdown">Профиль<span class="caret"></span>
              				</a> 
              				<ul class="dropdown-menu" role="menu">
               					<li><%= link_to "Аккаунт", current_user %></li>
                				<li><%= link_to "Настройки", edit_user_path(current_user) %></li>
                				<li class="divider"></li>
                				<li><%= link_to "Выход", signout_path, method: "delete" %>
                				</li>
              				</ul>
            			</li>

          			<% else %>
            			<li><%= link_to "Зарегистрироваться или войти", signin_path %></li>
          			<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>