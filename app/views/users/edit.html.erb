<!-- редактирование user'a -->
<% provide(:title, "Edit user") %>
<h1>Редактирование данных профиля</h1>

<div class="row">
  <!-- генерация форм ввода данных -->
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <!-- вывод сообщения об ошибках -->
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Имя"%>
      <%= f.text_field :name %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтвердить пароль" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary" %>
    <% end %>
    <!-- изменение аватара -->
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">Изменить аватар</a>
  </div>
</div>



